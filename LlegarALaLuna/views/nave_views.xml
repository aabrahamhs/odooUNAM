<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="nave_view_form">
            <field name="name">academy.nave.form</field>
            <field name="model">academy.nave_espacial</field>
            <field name="arch" type="xml">
                <form string="Nave Form">
                    <sheet>
                        <h1><field name="alto"/></h1>
                        <group>
                            <group>
                                <field name="ancho"/>
                                <field name="tipoBarco"/>
                            </group>
                            <group>
                                <field name="largo"/>
                                <field name="nopasajeros"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Combustible">
                                <field name="tipoCombustible"/>
                                <field name="active"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="nave_view_list">
            <field name="name">academy.nave.list</field>
            <field name="model">academy.nave_espacial</field>
            <field name="arch" type="xml">
                <tree string="Course List">
                    <field name="alto"/>
                    <field name="ancho"/>
                    <field name="largo"/>
                    <field name="tipoCombustible"/>
                    <field name="tipoBarco"/>
                    <field name="nopasajeros"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>