<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="nave_view_form">
            <field name="name">academy.nave.form</field>
            <field name="model">academy.nave_espacial</field>
            <field name="arch" type="xml">
                <form string="Nave Form">
                    <sheet>
                        <h1><field name="nombre"/></h1>
                        <group>
                            <group>
                                <field name="alto"/>
                                <field name="ancho"/>
                                <field name="tipoBarco"/>
                            </group>
                            <group>
                                <field name="largo"/>
                                <field name="nopasajeros"/>
                            </group>
                            <group>
                                <field name="cantidad_combustible"/>
                                <field name="no_motores"/>
                                <field name="no_caracteristicas_seguridad"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Combustible">
                                <field name="tipoCombustible"/>
                                <field name="active"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="nave_view_list">
            <field name="name">academy.nave.list</field>
            <field name="model">academy.nave_espacial</field>
            <field name="arch" type="xml">
                <tree string="Nave List">
                    <field name="nombre"/>
                    <field name="alto"/>
                    <field name="ancho"/>
                    <field name="largo"/>
                    <field name="tipoCombustible"/>
                    <field name="tipoBarco"/>
                    <field name="nopasajeros"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="nave_view_graph">
            <field name="name">academy.nave.graph</field>
            <field name="model">academy.nave_espacial</field>
            <field name="arch" type="xml">
                <graph string="Nave graph">
                    <field name="nopasajeros"/>
                    <field name="cantidad_combustible"/>
                    <field name="no_motores"/>
                    <field name="no_caracteristicas_seguridad"/>
                </graph>
            </field>
        </record>
        <record model="ir.actions.act_window" id="nave_graph_action">
            <field name="name">Grafico</field>
            <field name="res_model">academy.nave_espacial</field>
            <field name="view_mode">graph</field>
        </record>
    </data>
</odoo>