<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="tarea_view_form">
            <field name="name">academy.tarea.form</field>
            <field name="model">academy.tarea</field>
            <field name="arch" type="xml">
                <form string="Tarea Form">
                    <sheet>
                        <h1><field name="tarea"/></h1>
                        <group>
                            <group>
                                <field name="tipoTarea"/>
                                <!--field name="horaInicio"/>
                                <field name="horaFin"/-->
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripcion">
                                <field name="descripcion"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="tarea_view_list">
            <field name="name">academy.tarea.list</field>
            <field name="model">academy.tarea</field>
            <field name="arch" type="xml">
                <tree string="Tarea List">
                    <field name="tarea"/>
                    <field name="tipoTarea"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="tarea_view_search">
            <field name="name">academy.tarea.search</field>
            <field name="model">academy.tarea</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tarea"/>
                    <field name="descripcion"/>
                </search>
            </field>
        </record>
    </data>
</odoo>